%h1.tk-bello-pro RSVP

%form#rsvp{ :action => "/s/rsvp/respond", :method => "post" }
	%div#question
		%span Are you coming?
		%label
			Yes
			%input{ :type => 'radio', :name => 'response', :value => 'yes' }
		
		%label
			No
			%input{ :type => 'radio', :name => 'response', :value => 'no' }
		  
		%span.whisper (please say yes...)
	#cols
		.column
			%div.field
				%label{ :for => "name" } Name
				%input#name.text-input{ :type => "text", :name => "name" }= params[:name]
			%div.field
				%label{ :for => "email" } Email
				%input#email.text-input{ :type => "text", :name => "email" }= params[:email]
		.column.right
			%div
				%label{ :for => "info" }
					Comments
					%span.whisper (anything you want to tell us?)
				%textarea#info.text-input{ :name => "info" }= params[:info]
		%br{ :style => "clear: both" }
	%a.submit-link{ :href => "#", :onclick => "this.parentNode.submit(); return false;" } Send RSVP
	%input.submit{ :type => "submit", :value => "Send RSVP" }
	%br{ :style => "clear: both" }

